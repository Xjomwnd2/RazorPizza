@page "/admindashboard"
@model RazorPizza.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">
        <i class="bi bi-speedometer2"></i> Admin Dashboard
    </h2>

    <ul class="nav nav-tabs mb-4" id="adminTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pizzas-tab" data-bs-toggle="tab" 
                    data-bs-target="#pizzas" type="button" role="tab">
                <i class="bi bi-pizza"></i> Pizzas
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="orders-tab" data-bs-toggle="tab" 
                    data-bs-target="#orders" type="button" role="tab">
                <i class="bi bi-receipt"></i> Orders
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="toppings-tab" data-bs-toggle="tab" 
                    data-bs-target="#toppings" type="button" role="tab">
                <i class="bi bi-egg-fried"></i> Toppings
            </button>
        </li>
    </ul>

    <div class="tab-content" id="adminTabsContent">
        <!-- Pizzas Tab -->
        <div class="tab-pane fade show active" id="pizzas" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Manage Pizzas</h5>
                    <button class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Pizza
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pizza in Model.Pizzas)
                                {
                                    <tr>
                                        <td>@pizza.PizzaId</td>
                                        <td>@pizza.Name</td>
                                        <td>@pizza.Description</td>
                                        <td>$@pizza.Price.ToString("F2")</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <form method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        asp-page-handler="DeletePizza" 
                                                        asp-route-id="@pizza.PizzaId"
                                                        onclick="return confirm('Are you sure?')">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Tab -->
        <div class="tab-pane fade" id="orders" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Orders</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>User ID</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Delivery Address</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>#@order.OrderId</td>
                                        <td>@(string.IsNullOrEmpty(order.UserId) ? "Guest" : order.UserId.Substring(0, Math.Min(8, order.UserId.Length)) + "...")</td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy HH:mm")</td>
                                        <td>$@order.TotalAmount.ToString("F2")</td>
                                        <td>
                                            @if (order.Status == "Pending")
                                            {
                                                <span class="badge bg-warning text-dark">@order.Status</span>
                                            }
                                            else if (order.Status == "Preparing" || order.Status == "Baking")
                                            {
                                                <span class="badge bg-info">@order.Status</span>
                                            }
                                            else if (order.Status == "Delivering")
                                            {
                                                <span class="badge bg-primary">@order.Status</span>
                                            }
                                            else if (order.Status == "Completed")
                                            {
                                                <span class="badge bg-success">@order.Status</span>
                                            }
                                            else if (order.Status == "Cancelled")
                                            {
                                                <span class="badge bg-danger">@order.Status</span>
                                            }
                                            else
                                            {
                                                <span class="badge bg-secondary">@order.Status</span>
                                            }
                                        </td>
                                        <td>@(string.IsNullOrEmpty(order.DeliveryAddress) ? "N/A" : order.DeliveryAddress.Substring(0, Math.Min(30, order.DeliveryAddress.Length)) + "...")</td>
                                        <td>
                                            <button class="btn btn-sm btn-info" title="View Details">
                                                <i class="bi bi-eye"></i>
                                            </button>
                                            <div class="btn-group btn-group-sm" role="group">
                                                <button type="button" class="btn btn-sm btn-outline-secondary dropdown-toggle" data-bs-toggle="dropdown">
                                                    Update Status
                                                </button>
                                                <ul class="dropdown-menu">
                                                    <li><a class="dropdown-item" href="#">Preparing</a></li>
                                                    <li><a class="dropdown-item" href="#">Baking</a></li>
                                                    <li><a class="dropdown-item" href="#">Delivering</a></li>
                                                    <li><a class="dropdown-item" href="#">Completed</a></li>
                                                    <li><hr class="dropdown-divider"></li>
                                                    <li><a class="dropdown-item text-danger" href="#">Cancel</a></li>
                                                </ul>
                                            </div>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Toppings Tab -->
        <div class="tab-pane fade" id="toppings" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Manage Toppings</h5>
                    <button class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Topping
                    </button>
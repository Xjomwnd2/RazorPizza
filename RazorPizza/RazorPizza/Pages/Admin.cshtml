@page "/admindashboard"
@model RazorPizza.Pages.AdminModel
@{
    ViewData["Title"] = "Admin Dashboard";
}

<div class="container-fluid mt-4">
    <h2 class="mb-4">
        <i class="bi bi-speedometer2"></i> Admin Dashboard
    </h2>

    <ul class="nav nav-tabs mb-4" id="adminTabs" role="tablist">
        <li class="nav-item" role="presentation">
            <button class="nav-link active" id="pizzas-tab" data-bs-toggle="tab" 
                    data-bs-target="#pizzas" type="button" role="tab">
                <i class="bi bi-pizza"></i> Pizzas
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="orders-tab" data-bs-toggle="tab" 
                    data-bs-target="#orders" type="button" role="tab">
                <i class="bi bi-receipt"></i> Orders
            </button>
        </li>
        <li class="nav-item" role="presentation">
            <button class="nav-link" id="toppings-tab" data-bs-toggle="tab" 
                    data-bs-target="#toppings" type="button" role="tab">
                <i class="bi bi-egg-fried"></i> Toppings
            </button>
        </li>
    </ul>

    <div class="tab-content" id="adminTabsContent">
        <!-- Pizzas Tab -->
        <div class="tab-pane fade show active" id="pizzas" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Manage Pizzas</h5>
                    <button class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Pizza
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Description</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var pizza in Model.Pizzas)
                                {
                                    <tr>
                                        <td>@pizza.PizzaId</td>
                                        <td>@pizza.Name</td>
                                        <td>@pizza.Description</td>
                                        <td>$@pizza.Price.ToString("F2")</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <form method="post" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-danger" 
                                                        asp-page-handler="DeletePizza" 
                                                        asp-route-id="@pizza.PizzaId"
                                                        onclick="return confirm('Are you sure?')">
                                                    <i class="bi bi-trash"></i> Delete
                                                </button>
                                            </form>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Orders Tab -->
        <div class="tab-pane fade" id="orders" role="tabpanel">
            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Recent Orders</h5>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Order ID</th>
                                    <th>Customer Email</th>
                                    <th>Date</th>
                                    <th>Total</th>
                                    <th>Status</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var order in Model.Orders)
                                {
                                    <tr>
                                        <td>#@order.OrderId</td>
                                        <td>@(order.CustomerEmail ?? "N/A")</td>
                                        <td>@order.OrderDate.ToString("MMM dd, yyyy")</td>
                                        <td>$@order.TotalAmount.ToString("F2")</td>
                                        <td>
                                            <span class="badge bg-info">@order.Status</span>
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-info">
                                                <i class="bi bi-eye"></i> View
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>

        <!-- Toppings Tab -->
        <div class="tab-pane fade" id="toppings" role="tabpanel">
            <div class="card">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <h5 class="mb-0">Manage Toppings</h5>
                    <button class="btn btn-primary btn-sm">
                        <i class="bi bi-plus-circle"></i> Add Topping
                    </button>
                </div>
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>ID</th>
                                    <th>Name</th>
                                    <th>Price</th>
                                    <th>Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var topping in Model.Toppings)
                                {
                                    <tr>
                                        <td>@topping.ToppingId</td>
                                        <td>@topping.Name</td>
                                        <td>$@topping.Price.ToString("F2")</td>
                                        <td>
                                            <button class="btn btn-sm btn-warning">
                                                <i class="bi bi-pencil"></i> Edit
                                            </button>
                                            <button class="btn btn-sm btn-danger">
                                                <i class="bi bi-trash"></i> Delete
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
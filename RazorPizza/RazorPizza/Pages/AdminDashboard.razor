@page "/admin"
@using RazorPizza.Models
@using RazorPizza.Services
@using Microsoft.AspNetCore.Authorization
@attribute [Authorize(Roles = "Admin")]
@inject IOrderService OrderService
@inject IPizzaService PizzaService

<PageTitle>Admin Dashboard - Razor Pizza</PageTitle>

<div class="container-fluid my-4">
    <div class="row mb-4">
        <div class="col-12">
            <h1 class="display-5 fw-bold">
                <i class="bi bi-speedometer2"></i> Admin Dashboard
            </h1>
            <p class="text-muted">Manage your pizza restaurant</p>
        </div>
    </div>

    @if (loading)
    {
        <div class="text-center py-5">
            <div class="spinner-border text-primary"></div>
            <p class="mt-3">Loading dashboard...</p>
        </div>
    }
    else
    {
        <!-- Statistics Cards -->
        <div class="row g-4 mb-4">
            <!-- Total Orders -->
            <div class="col-md-3">
                <div class="card bg-primary text-white shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Total Orders</h6>
                                <h2 class="mt-2 mb-0">@totalOrders</h2>
                                <small>All time</small>
                            </div>
                            <i class="bi bi-receipt display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Pending Orders -->
            <div class="col-md-3">
                <div class="card bg-warning text-dark shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Pending Orders</h6>
                                <h2 class="mt-2 mb-0">@pendingOrders</h2>
                                <small>Needs attention</small>
                            </div>
                            <i class="bi bi-hourglass-split display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Today's Revenue -->
            <div class="col-md-3">
                <div class="card bg-success text-white shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Today's Revenue</h6>
                                <h2 class="mt-2 mb-0">$@todayRevenue.ToString("F2")</h2>
                                <small>@todayOrders orders</small>
                            </div>
                            <i class="bi bi-currency-dollar display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Total Pizzas -->
            <div class="col-md-3">
                <div class="card bg-info text-white shadow-sm h-100">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center">
                            <div>
                                <h6 class="card-title mb-0">Menu Items</h6>
                                <h2 class="mt-2 mb-0">@totalPizzas</h2>
                                <small>Active pizzas</small>
                            </div>
                            <i class="bi bi-pizza display-4 opacity-50"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Quick Actions -->
        <div class="row mb-4">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light">
                        <h5 class="mb-0">Quick Actions</h5>
                    </div>
                    <div class="card-body">
                        <div class="row g-3">
                            <div class="col-md-3">
                                <button class="btn btn-primary w-100" @onclick='() => NavigateTo("/admin/orders")'>
                                    <i class="bi bi-list-check"></i> Manage Orders
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-success w-100" @onclick='() => NavigateTo("/admin/pizzas")'>
                                    <i class="bi bi-plus-circle"></i> Add New Pizza
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-info w-100" @onclick='() => NavigateTo("/admin/toppings")'>
                                    <i class="bi bi-gear"></i> Manage Toppings
                                </button>
                            </div>
                            <div class="col-md-3">
                                <button class="btn btn-warning w-100" @onclick='() => NavigateTo("/admin/promos")'>
                                    <i class="bi bi-tag"></i> Promo Codes
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Recent Orders -->
        <div class="row">
            <div class="col-12">
                <div class="card shadow-sm">
                    <div class="card-header bg-light d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">Recent Orders</h5>
                        <button class="btn btn-sm btn-primary" @onclick="RefreshOrders">
                            <i class="bi bi-arrow-clockwise"></i> Refresh
                        </button>
                    </div>
                    <div class="card-body p-0">
                        <div class="table-responsive">
                            <table class="table table-hover mb-0">
                                <thead class="table-light">
                                    <tr>
                                        <th>Order #</th>
                                        <th>Customer</th>
                                        <th>Date</th>
                                        <th>Items</th>
                                        <th>Total</th>
                                        <th>Status</th>
                                        <th>Actions</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @if (!recentOrders.Any())
                                    {
                                        <tr>
                                            <td colspan="7" class="text-center text-muted py-4">
                                                No orders yet
                                            </td>
                                        </tr>
                                    }
                                    else
                                    {
                                        @foreach (var order in recentOrders)
                                        {
                                            <tr>
                                                <td>
                                                    <strong>#@order.OrderId</strong>
                                                </td>
                                                <td>
                                                    @if (order.User != null)
                                                    {
                                                        <div>@order.User.FirstName @order.User.LastName</div>
                                                        <small class="text-muted">@order.User.Email</small>
                                                    }
                                                </td>
                                                <td>
                                                    <div>@order.OrderDate.ToLocalTime().ToString("MMM dd, yyyy")</div>
                                                    <small class="text-muted">@order.OrderDate.ToLocalTime().ToString("hh:mm tt")</small>
                                                </td>
                                                <td>
                                                    <span class="badge bg-secondary">
                                                        @order.OrderItems.Sum(oi => oi.Quantity) items
                                                    </span>
                                                </td>
                                                <td>
                                                    <strong>$@order.TotalAmount.ToString("F2")</strong>
                                                </td>
                                                <td>
                                                    <span class="badge @GetStatusBadgeClass(order.Status)">
                                                        @order.Status
                                                    </span>
                                                </td>
                                                <td>
                                                    <div class="btn-group btn-group-sm">
                                                        <button class="btn btn-outline-primary" 
                                                                @onclick="() => ViewOrderDetails(order.OrderId)">
                                                            <i class="bi bi-eye"></i>
                                                        </button>
                                                        @if (order.Status != OrderStatuses.Completed && order.Status != OrderStatuses.Cancelled)
                                                        {
                                                            <button class="btn btn-outline-success" 
                                                                    @onclick="() => UpdateOrderStatus(order.OrderId)">
                                                                <i class="bi bi-arrow-right"></i>
                                                            </button>
                                                        }
                                                    </div>
                                                </td>
                                            </tr>
                                        }
                                    }
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@code {
    private bool loading = true;
    private List<Order> recentOrders = new();
    
    private int totalOrders = 0;
    private int pendingOrders = 0;
    private int todayOrders = 0;
    private decimal todayRevenue = 0;
    private int totalPizzas = 0;

    [Inject]
    private NavigationManager Navigation { get; set; } = default!;

    protected override async Task OnInitializedAsync()
    {
        await LoadDashboardData();
    }

    private async Task LoadDashboardData()
    {
        loading = true;

        try
        {
            // Load all orders
            var allOrders = await OrderService.GetAllOrdersAsync();
            recentOrders = allOrders.Take(10).ToList();
            
            // Calculate statistics
            totalOrders = allOrders.Count;
            pendingOrders = allOrders.Count(o => o.Status == OrderStatuses.Pending || 
                                                 o.Status == OrderStatuses.Preparing);
            
            var today = DateTime.Today;
            var todayOrdersList = allOrders.Where(o => o.OrderDate.Date == today).ToList();
            todayOrders = todayOrdersList.Count;
            todayRevenue = todayOrdersList.Sum(o => o.TotalAmount);

            // Load pizzas count
            var pizzas = await PizzaService.GetAllPizzasAsync();
            totalPizzas = pizzas.Count;
        }
        catch (Exception ex)
        {
            Console.WriteLine($"Error loading dashboard: {ex.Message}");
        }
        finally
        {
            loading = false;
        }
    }

    private async Task RefreshOrders()
    {
        await LoadDashboardData();
        StateHasChanged();
    }

    private string GetStatusBadgeClass(string status)
    {
        return status switch
        {
            OrderStatuses.Pending => "bg-warning text-dark",
            OrderStatuses.Preparing => "bg-info",
            OrderStatuses.Baking => "bg-primary",
            OrderStatuses.QualityCheck => "bg-secondary",
            OrderStatuses.OutForDelivery => "bg-primary",
            OrderStatuses.Delivered => "bg-success",
            OrderStatuses.Completed => "bg-success",
            OrderStatuses.Cancelled => "bg-danger",
            _ => "bg-secondary"
        };
    }

    private void ViewOrderDetails(int orderId)
    {
        Navigation.NavigateTo($"/admin/orders/{orderId}");
    }

    private async Task UpdateOrderStatus(int orderId)
    {
        var order = recentOrders.FirstOrDefault(o => o.OrderId == orderId);
        if (order == null) return;

        var nextStatus = order.Status switch
        {
            OrderStatuses.Pending => OrderStatuses.Preparing,
            OrderStatuses.Preparing => OrderStatuses.Baking,
            OrderStatuses.Baking => OrderStatuses.QualityCheck,
            OrderStatuses.QualityCheck => OrderStatuses.OutForDelivery,
            OrderStatuses.OutForDelivery => OrderStatuses.Delivered,
            OrderStatuses.Delivered => OrderStatuses.Completed,
            _ => order.Status
        };

        await OrderService.UpdateOrderStatusAsync(orderId, nextStatus);
        await RefreshOrders();
    }

    private void NavigateTo(string path)
    {
        Navigation.NavigateTo(path);
    }
}